{
  "name": "@nvmcp/federation",
  "version": "0.1.0-alpha",
  "description": "NVMCP Federation - Enterprise scaling and module federation",
  "type": "module",
  "main": "./dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./schemas": {
      "import": "./dist/schemas/index.js",
      "types": "./dist/schemas/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsx watch src/index.ts",
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "lint": "eslint src --ext .ts,.tsx --report-unused-disable-directives --max-warnings 0",
    "format": "prettier --write src",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@nvmcp/core": "workspace:*",
    "@nvmcp/store": "workspace:*",
    "node-fetch": "^3.3.2",
    "semver": "^7.7.2",
    "zod": "^3.25.64"
  },
  "devDependencies": {
    "@types/node": "^24.0.1",
    "@types/semver": "^7.7.0",
    "tsup": "^8.5.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vitest": "^3.2.3"
  },
  "peerDependencies": {
    "zod": "^3.25.0"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "federation",
    "enterprise",
    "scaling",
    "hot-swapping",
    "deployment",
    "monitoring",
    "nvmcp"
  ],
  "author": "NVMCP Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@github.com:adirbenyossef/-nvmcp.git",
    "directory": "packages/federation"
  },
  "bugs": {
    "url": "https://github.com/adirbenyossef/-nvmcp/issues"
  },
  "homepage": "https://nvmcp.com/docs/packages/federation",
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "files": [
    "dist",
    "README.md"
  ]
}