{
  "name": "nvmcp",
  "version": "0.1.0-alpha",
  "description": "Ï€ NVMCP CLI - The developer-first CLI for Model Context Protocol (MCP) server management",
  "type": "module",
  "main": "./dist/index.js",
  "bin": {
    "nvmcp": "./bin/nvmcp.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsx watch src/index.ts",
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "lint": "eslint src --ext .ts,.tsx --report-unused-disable-directives --max-warnings 0",
    "format": "prettier --write src",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@nvmcp/cloud": "workspace:*",
    "@nvmcp/core": "workspace:*",
    "@nvmcp/federation": "workspace:*",
    "@nvmcp/store": "workspace:*",
    "chalk": "^5.4.1",
    "yargs": "^18.0.0",
    "zod": "^3.25.64"
  },
  "devDependencies": {
    "@types/node": "^24.0.1",
    "@types/yargs": "^17.0.33",
    "tsup": "^8.5.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vitest": "^3.2.3"
  },
  "peerDependencies": {
    "zod": "^3.25.0"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "cli",
    "nvmcp",
    "complete",
    "all-in-one"
  ],
  "author": "NVMCP Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@github.com:adirbenyossef/-nvmcp.git",
    "directory": "apps/cli"
  },
  "bugs": {
    "url": "https://github.com/adirbenyossef/-nvmcp/issues"
  },
  "homepage": "https://nvmcp.com",
  "engines": {
    "node": ">=18.0.0"
  },
  "preferGlobal": true,
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "files": [
    "bin",
    "dist",
    "README.md"
  ]
}